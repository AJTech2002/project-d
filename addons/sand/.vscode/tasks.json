{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SandSim (Debug)",
            "type": "shell",
            "command": "scons",
            "args": [
                "platform=windows",
                "target=template_debug",
                "debug_symbols=yes",
                "compile_commands=yes",
                "arch=x86_64"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        
    ]
}